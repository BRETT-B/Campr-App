<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 50%; margin: 30px auto;">
            <form class="" method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <textarea rows="6" class="form-control" type="text" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 class="text-center">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form class="" method="POST" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Author" name="comment[author]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>